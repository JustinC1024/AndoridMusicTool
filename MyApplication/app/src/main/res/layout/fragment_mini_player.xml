<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="88dp"
            android:orientation="vertical"
            android:background="#3bbaff">

            <!--进度条-->
            <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/miniSeekBar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="-3dp">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:id="@+id/miniTitle"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text=""
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:id="@+id/miniArtist" />
                </LinearLayout>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_skip_previous"
                    android:id="@+id/miniPrevious"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_play"
                    android:id="@+id/miniPlay"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_skip_next"
                    android:id="@+id/miniNext"/>
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <com.example.justin.myapplication.layout.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/music_eight"
            android:id="@+id/miniImage"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>